import time, date

class timer
	start_time = 0
	end_time = 0

	fn run()
		self.start_time = time.now()

	fn stop()
		self.end_time = time.now()

	fn time()
		return self.end_time - self.start_time

	fn __str__()
		times = self.time()
		text = ""
		n = times.hour()

		if n != 0
			text += n + "h "

		n = times.minute()

		if n != 0
			text += n + "m "

		n = times.second()

		if n != 0
			text += n + "s "

		n = times.milliseconds()

		if n != 0
			text += n + "ms "

		return text
